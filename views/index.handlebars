<h1 class="text-center mb-5">{{title}}</h1>
<form action="/api/cars" method="POST" class="mb-5">
    <div class="form-group">
        <label for="manufacturer">Manufacturer</label>
        <input type="text" name="manufacturer" class="form-control">
    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="model" name="model" class="form-control">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="price" name="price" class="form-control">
    </div>
    <input type="submit" value="Add vehicle" class="btn btn-primary btn-block">
</form>
<h3>Cars</h3>
<ul class="list">
    {{#each cars}}
    <li class="list-item">{{this.manufacturer}}: {{this.model}}: {{this.price}}</li>
    {{/each}}
</ul>